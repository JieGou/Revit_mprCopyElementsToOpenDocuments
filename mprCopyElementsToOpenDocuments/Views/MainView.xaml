<mps:ModPlusWindow x:Class="mprCopyElementsToOpenDocuments.Views.MainView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                   xmlns:model="clr-namespace:mprCopyElementsToOpenDocuments.Models"
                   xmlns:viewModels="clr-namespace:mprCopyElementsToOpenDocuments.ViewModels"
                   xmlns:converters="clr-namespace:ModPlusAPI.Converters;assembly=ModPlusAPI"
                   xmlns:mps="https://modplus.org/winfx/xaml/controls"
                   mc:Ignorable="d"
                   d:DataContext="{d:DesignInstance viewModels:MainViewModel, d:IsDesignTimeCreatable=False}"
                   d:DesignHeight="800" d:DesignWidth="550"
                   MinHeight="600" MinWidth="450"
                   WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusStyle;component/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="Lang" Source="C:/Projects/ru-RU.xml" XPath="ModPlus/mprCopyElementsToOpenDocuments" />
            <converters:BooleanInverseConverter x:Key="BooleanInverseConverter"/>

            <Style BasedOn="{StaticResource ModPlusTreeViewItem}" TargetType="{x:Type TreeViewItem}">
                <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <EventSetter Event="Selected" Handler="TreeViewSelectedItem_OnHandler"/>
            </Style>
            <DataTemplate DataType="{x:Type model:BrowserItem}" x:Key="ItemsLevel">
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Path=Checked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock VerticalAlignment="Center">
                        <Run Text="{Binding Path=Name, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </DataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type model:BrowserItemGroup}" x:Key="ItemsGroupLevel"
                                      ItemsSource="{Binding Path=Items}"
                                      ItemTemplate="{StaticResource ItemsLevel}">
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Path=Checked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="{Binding Path=Name, Mode=OneWay}" VerticalAlignment="Center"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type model:BrowserGeneralGroup}" x:Key="GeneralGroupLevel"
                                      ItemsSource="{Binding Path=Items}"
                                      ItemTemplate="{StaticResource ItemsGroupLevel}">
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Path=Checked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="{Binding Path=Name, Mode=OneWay}" VerticalAlignment="Center"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.95*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button>
                <!--<Image Source="../Resources/expand_all.png"/>-->
            </Button>
            <Button Width="80"></Button>
            <Button></Button>
            <Button></Button>
        </StackPanel>
        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>
            <TreeView Grid.Row="0"
                      ItemsSource="{Binding Path=GeneralGroups}"
                      ItemTemplate="{StaticResource GeneralGroupLevel}"
                      Margin="0" BorderThickness="0"
                      IsEnabled="True">
                <TreeView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource ModPlusTreeViewItem}" TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></Setter>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition Height="0.15*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Margin="5 0 0 0" FontSize="14" Text="Выбрано элементов:"
                               HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Margin="5 0 0 0" FontSize="22" FontWeight="Bold" Text="{Binding Path=SelectedItemsCount}"
                               HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <GroupBox Grid.Row="2" Header="Опции">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <RadioButton Grid.Row="0">Разрешить дублирование</RadioButton>
                            <RadioButton Grid.Row="1">Запретить дублирование</RadioButton>
                            <RadioButton Grid.Row="2">Запросить разрешение</RadioButton>
                        </Grid>
                    </GroupBox>
                    <Button Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">Лог событий</Button>
                    <Button Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">Выполнить копирование</Button>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.7*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Margin="5 0 0 0" FontSize="14" Text="Из проекта:"
                               HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding Path=Documents}"
                              >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="{Binding Path=Title, Mode=OneWay}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="SelectionChanged">
                                <b:InvokeCommandAction Command="{Binding LoadCurrentDocumentElementsCommand}"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </ComboBox>
                    <TextBlock Grid.Row="2" Margin="5 0 0 0" FontSize="14" Text="В проект:"
                               HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <ListBox Grid.Row="3"
                             ItemsSource="{Binding Path=Documents}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding Path=Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding Path=Title, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</mps:ModPlusWindow>
